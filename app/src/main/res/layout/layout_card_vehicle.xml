<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <TextView
            android:id="@+id/tvPlakaTitle"
            android:text="Plaka: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvPlaka"
            android:layout_toRightOf="@+id/tvPlakaTitle"
            android:text="Plaka: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCurrentCityTitle"
            android:layout_below="@id/tvPlakaTitle"
            android:text="Nereden : "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCurrentCity"
            android:layout_toRightOf="@+id/tvCurrentCityTitle"
            android:layout_below="@+id/tvPlaka"
            android:text="Nereden: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDestCityTitle"
            android:layout_below="@+id/tvCurrentCityTitle"
            android:text="Nereye : "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDestCity"
            android:layout_toRightOf="@+id/tvDestCityTitle"
            android:layout_below="@+id/tvCurrentCity"
            android:text="Nereye: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDateGoTitle"
            android:layout_below="@id/tvDestCityTitle"
            android:text="Gidiş Tarihi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDateGo"
            android:layout_toRightOf="@+id/tvDateGoTitle"
            android:layout_below="@+id/tvDestCity"
            android:text="Gidiş:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvDateBackTitle"
            android:layout_below="@id/tvDateGoTitle"
            android:text="Dönüş Tarihi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDateBack"
            android:layout_toRightOf="@+id/tvDateBackTitle"
            android:layout_below="@+id/tvDateGo"
            android:text="Dönüş:  "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
